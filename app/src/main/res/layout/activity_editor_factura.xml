<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#E63D3D"
    android:orientation="vertical"
    android:padding="14dp"
    tools:context=".ui.Facturas.EditorActivity">

    <Button
        android:id="@+id/btn_fecha_factura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#E44E4E"
        android:text="Seleccionar Fecha de la Factura" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp">

        <EditText
            android:id="@+id/fechaFacturaEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de la Factura"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true"
            android:focusableInTouchMode="false" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp">

        <EditText
            android:id="@+id/montoFacturaEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Monto de la Factura"
            android:inputType="numberDecimal" />

    </com.google.android.material.textfield.TextInputLayout>

    <Spinner
        android:id="@+id/citaSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:hint="Seleccione la Cita" />

    <Spinner
        android:id="@+id/estadoSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:hint="Estado de la Factura" />

    <Button
        android:id="@+id/btn_registrar_factura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#E44E4E"
        android:text="Registrar Factura" />

</LinearLayout>
